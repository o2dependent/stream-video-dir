---
import Nav from "$components/Nav.svelte";
import FullscreenListener from "$components/listeners/FullscreenListener.svelte";
import WindowScrollYListener from "$components/listeners/WindowScrollYListener.svelte";
import { ViewTransitions } from "astro:transitions";
interface Props {
	title: string;
}

const { title } = Astro.props;
const hostname = Astro.url.hostname;
const pathname = Astro.url.pathname;
const profile = Astro.locals.profile?.name;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="bg-zinc-950 text-slate-50">
		<FullscreenListener client:load />
		<WindowScrollYListener client:load />
		<Nav
			transition:persist
			transition:name="watch-nav"
			client:load
			{hostname}
			{pathname}
			{profile}
		/>
		<div class="w-full mx-auto flex flex-col gap-2">
			<slot />
		</div>
	</body>
</html>
